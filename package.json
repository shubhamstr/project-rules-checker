{
  "name": "project-rules-checker",
  "displayName": "Project Rules Checker",
  "description": "Checks project structure and dev rules like env safety, gitignore, and folder conventions",
  "version": "0.0.2",
  "publisher": "shubhamstr",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:projectRules.check"
  ],
  "main": "dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "projectRules.check",
        "title": "Check Project Rules"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p .",
    "prepublishOnly": "npm run compile",
    "watch": "tsc -watch -p ."
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shubhamstr/project-rules-checker.git"
  }
}